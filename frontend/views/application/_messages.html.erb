<% flash.each do |type, content| %>
  <div class="alert alert-dismissible fade show <%= flash_class_by(type) %>" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= content %>
  </div>
<% end %>
